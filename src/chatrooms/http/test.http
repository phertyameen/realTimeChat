# Create a new chat room
POST {{host}}/chat-rooms
Authorization: Bearer {add token here}
Content-Type: application/json

{
    "name": "Test Group Chat",
    "type": "group",
    "userIds": [1, 3]
}

###

# Get all chat rooms
GET {{host}}/chat-rooms
Authorization: Bearer {token}

###

# Get specific chat room
GET {{host}}/chat-rooms/1
Authorization: Bearer {token}

###

# Update chat room
PATCH {{host}}/chat-rooms/1
Authorization: Bearer {token}
Content-Type: application/json

{
    "name": "Updated Chat Room Name -musa"
}

###

# Delete chat room
DELETE {{host}}/chat-rooms/1
Authorization: Bearer {token}